{
  "include": ["src/node_modules/**/*.ts"],
  "compilerOptions": {
    /* Basic Options */
    "target": "es3",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist/node_modules",
    "rootDir": "./src/node_modules",
    "removeComments": true,
    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": true,
    /* Module Resolution Options */
    "esModuleInterop": true,
    "sourceRoot": "./src/node_modules",
  }
}
